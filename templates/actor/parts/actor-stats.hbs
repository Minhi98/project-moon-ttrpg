<div class="tab stats" data-group="primary" data-tab="stats">

      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
      <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.healthPoints.value" class="resource-label">{{localize 'PROJECT_MOON.DerivedAttributes.HealthPoints.long'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number" name="system.healthPoints.value" value="{{system.healthPoints.value}}" data-dtype="Number"/>
          <label for="system.healthPoints.max"> / {{system.healthPoints.max}}</label>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.staggerThreshold.value" class="resource-label">{{localize 'PROJECT_MOON.DerivedAttributes.StaggerThreshold.long'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number" name="system.staggerThreshold.value" value="{{system.staggerThreshold.value}}" data-dtype="Number"/>
          <label for="system.staggerThreshold.max"> / {{system.staggerThreshold.max}}</label>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.sanityPoints.value" class="resource-label">{{localize 'PROJECT_MOON.DerivedAttributes.SanityPoints.long'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number" name="system.sanityPoints.value" value="{{system.sanityPoints.value}}" data-dtype="Number"/>
          <label for="system.sanityPoints.max"> / {{system.sanityPoints.max}}</label>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.light.value" class="resource-label">{{localize 'PROJECT_MOON.DerivedAttributes.Light'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number" name="system.light.value" value="{{system.light.value}}" data-dtype="Number"/>
          <label for="system.light.max"> / {{system.light.max}}</label>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.progress.xp" class="resource-label">{{localize 'PROJECT_MOON.Progression.XP'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number" name="system.progress.xp" value="{{system.progress.xp}}" data-dtype="Number"/>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.progress.level" class="resource-label">{{localize 'PROJECT_MOON.Progression.Level'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <label for="system.progress.level">{{system.progress.level}}</label>
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.progress.rank" class="resource-label">{{localize 'PROJECT_MOON.Progression.Rank'}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <label for="system.progress.rank">{{system.progress.rank}}</label>
          </div>
        </div>
      </div>

      <section class="grid grid-3col">
        <aside class="sidebar">
          <img class="profile-img" src="{{actor.img}}" data-edit="img" height="100" width="100"/>

          <div class="stats flexcol">
            {{#each system.stats as |stat key|}}
            <div class="stat flexrow flex-group-center">
              <label for="system.stats.{{key}}.value" class="resource-label rollable flexlarge align-left" data-roll="2d6+@stats.{{key}}.value" data-label="{{localize (lookup @root.config.stats key)}}">{{localize (lookup @root.config.stats key)}}</label>
              <input type="number" name="system.stats.{{key}}.value" value="{{stat.value}}" data-dtype="Number"/>
            </div>
            {{/each}}
          </div>
        </aside>

        {{!-- For the main features list, span the right two columns --}}
        <section class="main grid-span-2">
          {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
          {{> "systems/project-moon-ttrpg/templates/actor/parts/actor-features.hbs"}}
        </section>

      </section>
    </div>