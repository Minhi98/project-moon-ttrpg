<div class="tab inventory" data-group="primary" data-tab="inventory">
  {{!-- Currency --}}
  <div class="resource flexrow">
    <label for="system.inventory.ahn" class="resource-label inventory-ahn-label">{{localize 'PROJECT_MOON.Item.MoneyLabel'}}</label>
    <input class="inventory-ahn-field" type="number" name="system.inventory.ahn" value="{{system.inventory.ahn}}" data-dtype="Number"/>
  </div>

  {{!-- Inventory List --}}
  <ol class='items-list'>
    <li class='item flexrow items-header'>
      <div class='item-name'>{{localize 'Name'}}</div>
      {{!-- <div class='item-formula'>{{localize 'Roll Formula'}}</div> --}}
      <div class='item-controls'>
        <a
          class='item-control item-create'
          title='{{localize "DOCUMENT.Create" type='Item'}}'
          data-type='item'
        >
          <i class='fas fa-plus'></i>
          {{localize 'DOCUMENT.New' type='item'}}
        </a>
      </div>
    </li>
    {{> "systems/project-moon-ttrpg/templates/actor/parts/item-line.hbs"}}
  </ol>
</div>